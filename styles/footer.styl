// footer styles

footer
  float left
  position relative
  width 100%
  height 70px
  background $aqua
  padding 0 10px
  box-sizing border-box
  z-index 2
  @media $tablet 
    height 90px

  // copyright styles
  .wrapper

    span
      position absolute
      top 50%
      transform translateY(-50%)
      color $white
      &.left
        left 0
      &.right
        right 0
        display none
        @media $tablet
          display inline-block
        strong
          text-transform uppercase
          font-size 20px
          margin-right 5px