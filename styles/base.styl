// body styles

body
  background url('../images/bg.jpg') repeat
  background-size 50%

// wrapper styles

.wrapper
  position relative
  width 100%
  height 100%
  @media $desktop
    max-width 1280px
    margin 0 auto

// line break styles

br
  display none
  @media $tablet
    display block

// section float

section
  float left

// animate class
@media $laptop
  .animate
    opacity 0