// about styles

.about
  width 100%
  padding: 0 10px
  box-sizing border-box
  @media $desktop
    padding 0

  // cta styles

  .cta 
    width 100%
    height 250px
    margin-bottom 75px
    @media $desktop
      height 200px

    a
      float left;
      display inline-block
      margin 0
      padding 10px 0
      width 100%
      height 100%
      box-sizing border-box
      @media $android
        width 75%
        margin 0 7.5%
      @media $tablet
        width 50%
        margin 0
        padding 10px
        &:nth-child(1)
          padding-left 0
        &:nth-child(2)
          padding-right 0
        &:nth-child(3)
          padding-left 0
        &:nth-child(4)
          padding-right 0
      @media $laptop
        width 35%
        margin 0 7.5%
      @media $desktop
        width 25%
        margin 0
        &:nth-child(1)
          padding-left 0
        &:nth-child(2)
          padding-right 10px
        &:nth-child(3)
          padding-left 10px
        &:nth-child(4)
          padding-right 0

      .amenities
        background url('../images/amenities.jpg')  bottom center no-repeat
        background-size 100%
        width 100%
        height 100%
        @media $desktop
          background-position center center
      
      .profit
        background url('../images/profit.jpg')  bottom center no-repeat
        background-size 100%
        width 100%
        height 100%
        @media $desktop
          background-position center center
      
      .services
        background url('../images/services.jpg')  bottom center no-repeat
        background-size 100%
        width 100%
        height 100%
        @media $desktop
          background-position center center
      
      .virtual
        background url('../images/virtual.jpg')  bottom center no-repeat
